<?php
$mysqli = new mysqli("{{ app_db_host }}", "{{ app_db_user }}", "{{ app_db_password }}", "{{ app_db_name }}");

if ($mysqli->connect_error) {
    die("Connection failed: " . $mysqli->connect_error);
}

echo "<h1>Ansible Demo: Połączenie działa!</h1>";
echo "<p>Host: {{ app_db_host }}</p>";
echo "<p>Baza: {{ app_db_name }}</p>";

$result = $mysqli->query("SELECT NOW() as current_time");
$row = $result->fetch_assoc();
echo "<p>Aktualny czas z bazy danych: " . $row['current_time'] . "</p>";
?>
